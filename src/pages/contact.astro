---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import {Image} from 'astro:assets'
import Whyconnect from '@assets/whyconnect.png'
---

<Layout title="">
  <Container>
    <section class="lg:py-40 sm:py-16 md:py-24">
      <div class="max-w-6xl px-4 mx-auto sm:px-6 lg:px-8 glass">
          <div class="grid grid-cols-1 md:items-stretch md:grid-cols-2 gap-x-12 lg:gap-x-20 gap-y-10">
              <div class="flex flex-col justify-between lg:py-5">
                  <div>
                      <h2 class="text-3xl font-bold leading-tight text-indigo-900 dark:text-indigo-100 sm:text-4xl lg:leading-tight lg:text-5xl">It’s time to turn your goodies ideas into a digital reality!</h2>
                      <p class="max-w-xl mx-auto mt-4 text-base leading-relaxed text-slate-700 dark:text-indigo-200">Got a quest/an idea? Let’s chat!</br> Fill out the form, drop me an email, or hit my line — <br/>I'm all ears and ready to help</p>
  
                      <svg class="relative z-10 max-w-xs mx-auto -mb-16 md:hidden stroke-teal-500 dark:stroke-pink-300" width="235" height="115" viewBox="0 0 235 115" xmlns="http://www.w3.org/2000/svg">
                        <path opacity="0.8" d="M2 1C11.1143 29.7179 47.3229 84.021 119.243 71.4895C143.271 65.6154 142.443 41.7273 125.871 39.7692C109.3 37.8112 102.257 48.7762 104.329 60.1329C106.4 71.4895 127.529 100.077 234 113" class="stroke-current" stroke-width="4"/>
                      </svg>
                      
                        
