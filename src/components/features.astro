import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Bring Your Vision to Life",
    description:
      "Utilize cutting-edge tech like JavaScript meta-frameworks to transform your ideas into SPA, PWA, SaaS, E-com, or complex web and mobile applications",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Lightning-Fast Performance",
    description: "Optimize performance with SSG, SSR, and on-demand hydration. We ensure fast load times and exceptional UX by minimizing unnecessary JavaScript.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Interactivity",
    description: "Need engaging UX? We build interactive websites that enhance user satisfaction and increase conversions, setting your brand apart",
    icon: "bx:bxs-data",
  },
  {
    title: "API Design, Tooling, and Integrations ",
    description: "We excel in enhancing your app with clean code, functional techstack, streamlined tooling, and REST API design, ensuring top-notch quality and best practices to elevate your project.",
