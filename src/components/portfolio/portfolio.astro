---

<section class="relative py-20 bg-gray-50 dark:bg-gray-900">
  <motion.h2
    class="text-4xl font-bold text-center text-indigo-900 dark:text-white"
    animate={{ opacity: [0.2, 1], y: [-50, 0] }}
    transition={{ duration: 0.7, ease: "easeOut" }}>
    A glimpse at my works
  </motion.h2>

  <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-6 md:px-12 xl:px-24">
    {previews.map((item, i) => (
      <motion.div
        key={i}
        initial={{ opacity: 0, y: 40 }}
        whileInView={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.6, delay: i * 0.15, ease: "easeOut" }}
        viewport={{ once: true }}
        class="p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg transition-all hover:scale-105">
        <img src={item.image} alt={item.title} class="w-full h-48 object-cover rounded-lg" />
        <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-200">{item.title}</h3>
