---
import Scene from "@components/3D/Scene";
import HeroTypography from "@components/HeroTypography";
---

<main class="hero w-full h-screen flex flex-col-reverse md:flex-row items-center justify-between pt-20 px-6 md:px-12 xl:px-24 gap-16 md:gap-24">
  <!-- Left Section (Typography) -->
  <section>
    <HeroTypography client:visible />
  </section>

  <!-- Right Section (3D Scene without Observer) -->
  <div
    class="relative w-full md:w-1/2 xl:h-2/3 lg:h-2/3 md:h-full will-change-transform"
    style="contain: layout paint size"
    aria-hidden="true">
    <Scene client:load />
  </div>
</main>

<style>
.hero {
  contain: layout paint size;
  perspective: 1000px;
}

@media (prefers-reduced-motion: reduce) {
  .hero {
    animation: none !important;
  }
}
</style>
